<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="Lesson_8.client.Controller">

    <HBox fx:id="upperPanel" >
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="loginField"/>
        <PasswordField promptText="Пароль" fx:id="passwordField" onAction="#tryToAuth" />
        <Button text="Войти" onAction="#tryToAuth" />
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS" >
            <ScrollPane vvalue="1.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" prefWidth="350">
                <VBox fx:id="VBoxChat" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" prefWidth="215">
                </VBox>
            </ScrollPane>
            <HBox fx:id="bottomPanel" managed="false" visible="false">
                <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите текст" HBox.hgrow="ALWAYS" />
                <Button fx:id="btn1" onAction="#sendMsg" text="Send" />
            </HBox>
        </VBox>
        <ListView fx:id="clientList" managed="false" visible="false"/>
    </HBox>

</VBox>
